{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Site Range",
  "type": "object",
  "properties": {
    "building": {
      "type": "object",
      "properties": {
        "COMPONENT_IS_MANDATORY": {
          "type": "boolean"
        },
        "scalar_heat_load": {
          "type": "array",
          "items": {
            "type": "number",
            "minimum": 0
          }
        },
        "scalar_electrical_load": {
          "type": "array",
          "items": {
            "type": "number",
            "minimum": 0
          }
        },
        "fabric_intervention_index": {
          "type": "array",
          "items": {
            "type": "integer",
            "minimum": 0
          }
        }
      },
      "required": ["scalar_heat_load", "scalar_electrical_load", "fabric_intervention_index"]
    },
    "data_centre": {
      "type": "object",
      "properties": {
        "COMPONENT_IS_MANDATORY": {
          "type": "boolean"
        },
        "maximum_load": {
          "type": "array",
          "items": {
            "type": "number",
            "minimum": 0
          }
        },
        "hotroom_temp": {
          "type": "array",
          "items": {
            "type": "number"
          }
        }
      },
      "required": ["maximum_load", "hotroom_temp"]
    },
    "domestic_hot_water": {
      "type": "object",
      "properties": {
        "COMPONENT_IS_MANDATORY": {
          "type": "boolean"
        },
        "cylinder_volume": {
          "type": "array",
          "items": {
            "type": "number",
            "minimum": 0
          }
        }
      },
      "required": ["cylinder_volume"]
    },
    "electric_vehicles": {
      "type": "object",
      "properties": {
        "COMPONENT_IS_MANDATORY": {
          "type": "boolean"
        },
        "flexible_load_ratio": {
          "type": "array",
          "items": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        },
        "small_chargers": {
          "type": "array",
          "items": {
            "type": "integer",
            "minimum": 0
          }
        },
        "fast_chargers": {
          "type": "array",
          "items": {
            "type": "integer",
            "minimum": 0
          }
        },
        "rapid_chargers": {
          "type": "array",
          "items": {
            "type": "integer",
            "minimum": 0
          }
        },
        "ultra_chargers": {
          "type": "array",
          "items": {
            "type": "integer",
            "minimum": 0
          }
        },
        "scalar_electrical_load": {
          "type": "array",
          "items": {
            "type": "number",
            "minimum": 0
          }
        }
      },
      "required": [
        "flexible_load_ratio",
        "small_chargers",
        "fast_chargers",
        "rapid_chargers",
        "ultra_chargers",
        "scalar_electrical_load"
      ]
    },
    "energy_storage_system": {
      "type": "object",
      "properties": {
        "COMPONENT_IS_MANDATORY": {
          "type": "boolean"
        },
        "capacity": {
          "type": "array",
          "items": {
            "type": "number",
            "exclusiveMinimum": 0
          }
        },
        "charge_power": {
          "type": "array",
          "items": {
            "type": "number",
            "exclusiveMinimum": 0
          }
        },
        "discharge_power": {
          "type": "array",
          "items": {
            "type": "number",
            "exclusiveMinimum": 0
          }
        },
        "battery_mode": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "CONSUME", "CONSUME_PLUS"
            ]
          }
        },
        "initial_charge": {
          "type": "array",
          "items": {
            "type": "number",
            "minimum": 0
          }
        }
      },
      "required": [
        "capacity",
        "charge_power",
        "discharge_power",
        "battery_mode",
        "initial_charge"
      ]
    },
    "gas_heater": {
      "type": "object",
      "properties": {
        "COMPONENT_IS_MANDATORY": {
          "type": "boolean"
        },
        "maximum_output": {
          "type": "array",
          "items": {
            "type": "number",
            "exclusiveMinimum": 0
          }
        },
        "gas_type": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "NATURAL_GAS", "LIQUID_PETROLEUM_GAS"
            ]
          }
        },
        "boiler_efficiency": {
          "type": "array",
          "items": {
            "type": "number",
            "exclusiveMinimum": 0,
            "maximum": 1
          }
        }
      }
    },
    "grid": {
      "type": "object",
      "properties": {
        "COMPONENT_IS_MANDATORY": {
          "type": "boolean"
        },
        "grid_export": {
          "type": "array",
          "items": {
            "type": "number",
            "minimum": 0
          }
        },
        "grid_import": {
          "type": "array",
          "items": {
            "type": "number",
            "minimum": 0
          }
        },
        "import_headroom": {
          "type": "array",
          "items": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        },
        "tariff_index": {
          "type": "array",
          "items": {
            "type": "integer",
            "minimum": 0
          }
        },
        "export_tariff": {
          "type": "array",
          "items": {
            "type": "number"
          }
        }
      },
      "required": [
        "grid_export",
        "grid_import",
        "import_headroom",
        "tariff_index",
        "export_tariff"
      ]
    },
    "heat_pump": {
      "type": "object",
      "properties": {
        "COMPONENT_IS_MANDATORY": {
          "type": "boolean"
        },
        "heat_power": {
          "type": "array",
          "items": {
            "type": "number",
            "minimum": 0
          }
        },
        "heat_source": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "AMBIENT_AIR",
              "HOTROOM"
            ]
          }
        },
        "send_temp": {
          "type": "array",
          "items": {
            "type": "number"
          }
        }
      },
      "required": ["heat_power", "heat_source", "send_temp"]
    },
    "mop": {
      "type": "object",
      "properties": {
        "COMPONENT_IS_MANDATORY": {
          "type": "boolean"
        },
        "maximum_load": {
          "type": "array",
          "items": {
            "type": "number",
            "minimum": 0
          }
        }
      },
      "required": ["maximum_load"]
    },
    "renewables": {
      "type": "object",
      "properties": {
        "COMPONENT_IS_MANDATORY": {
          "type": "boolean"
        },
        "yield_scalars": {
          "type": "array",
          "items": {
            "type": "array",
            "items": {
              "type": "number",
              "minimum": 0
            }
          }
        }
      },
      "required": ["yield_scalars"]
    },
    "config": {
      "type": "object",
      "title": "Config",
      "properties": {
        "capex_limit": {
          "type": "number",
          "title": "CAPEX Limit",
          "description": "The maximum capital expenditure (CAPEX) allowed at this site in pounds.",
          "minimum": 0,
          "default": 2500000
        },
        "use_boiler_upgrade_scheme": {
          "type": "boolean",
          "title": "Use Boiler Upgrade Scheme",
          "description": "Apply funding from the boiler upgrade scheme (if eligible).",
          "default": false
        },
        "general_grant_funding": {
          "type": "number",
          "title": "General Grant Funding",
          "description": "Apply unconditional funding up to this value in Â£.",
          "minimum": 0,
          "default": 0
        }
      },
      "required": ["capex_limit", "use_boiler_upgrade_scheme", "general_grant_funding"]
    }
  },
  "required": ["config"]
}