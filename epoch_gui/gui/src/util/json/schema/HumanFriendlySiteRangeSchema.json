{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Site Range",
  "type": "object",
  "properties": {
    "building": {
      "type": "object",
      "properties": {
        "COMPONENT_IS_MANDATORY": {"type": "boolean"},
        "scalar_heat_load": {"$ref": "#/definitions/paramRangeFloat"},
        "scalar_electrical_load": {"$ref": "#/definitions/paramRangeFloat"},
        "fabric_intervention_index": {
          "type": "array",
          "items": {"type": "integer", "minimum": 0}
        }
      },
      "required": ["COMPONENT_IS_MANDATORY", "scalar_heat_load", "scalar_electrical_load", "fabric_intervention_index"]
    },
    "data_centre": {
      "type": "object",
      "properties": {
        "COMPONENT_IS_MANDATORY": {"type": "boolean"},
        "maximum_load": {"$ref": "#/definitions/paramRangeFloat"},
        "hotroom_temp": {"$ref": "#/definitions/paramRangeFloat"}
      },
      "required": ["COMPONENT_IS_MANDATORY","maximum_load", "hotroom_temp"]
    },
    "domestic_hot_water": {
      "type": "object",
      "properties": {
        "COMPONENT_IS_MANDATORY": {"type": "boolean"},
        "cylinder_volume": {"$ref": "#/definitions/paramRangeFloat"}
      },
      "required": ["COMPONENT_IS_MANDATORY","cylinder_volume"]
    },
    "electric_vehicles": {
      "type": "object",
      "properties": {
        "COMPONENT_IS_MANDATORY": {"type": "boolean"},
        "flexible_load_ratio": {"$ref": "#/definitions/paramRangeFloat"},
        "small_chargers": {"$ref": "#/definitions/paramRangeInt"},
        "fast_chargers": {"$ref": "#/definitions/paramRangeInt"},
        "rapid_chargers": {"$ref": "#/definitions/paramRangeInt"},
        "ultra_chargers": {"$ref": "#/definitions/paramRangeInt"},
        "scalar_electrical_load": {"$ref": "#/definitions/paramRangeFloat"}
      },
      "required": [
        "COMPONENT_IS_MANDATORY",
        "flexible_load_ratio",
        "small_chargers",
        "fast_chargers",
        "rapid_chargers",
        "ultra_chargers",
        "scalar_electrical_load"
      ]
    },
    "energy_storage_system": {
      "type": "object",
      "properties": {
        "COMPONENT_IS_MANDATORY": {"type": "boolean"},
        "capacity": {"$ref": "#/definitions/paramRangeFloat"},
        "charge_power": {"$ref": "#/definitions/paramRangeFloat"},
        "discharge_power": {"$ref": "#/definitions/paramRangeFloat"},
        "battery_mode": {
          "type": "array",
          "items": {"type": "string", "enum": ["CONSUME", "CONSUME_PLUS"]}
        },
        "initial_charge": {"$ref": "#/definitions/paramRangeFloat"}
      },
      "required": [
        "COMPONENT_IS_MANDATORY",
        "capacity",
        "charge_power",
        "discharge_power",
        "battery_mode",
        "initial_charge"
      ]
    },
    "grid": {
      "type": "object",
      "properties": {
        "COMPONENT_IS_MANDATORY": {"type": "boolean"},
        "export_headroom": {"$ref": "#/definitions/paramRangeFloat"},
        "grid_export": {"$ref": "#/definitions/paramRangeFloat"},
        "grid_import": {"$ref": "#/definitions/paramRangeFloat"},
        "import_headroom": {"$ref": "#/definitions/paramRangeFloat"},
        "min_power_factor": {"$ref": "#/definitions/paramRangeFloat"},
        "tariff_index": {
          "type": "array",
          "items": {"type": "integer", "minimum": 0}
        }
      },
      "required": [
        "COMPONENT_IS_MANDATORY",
        "export_headroom",
        "grid_export",
        "grid_import",
        "import_headroom",
        "min_power_factor",
        "tariff_index"
      ]
    },
    "heat_pump": {
      "type": "object",
      "properties": {
        "COMPONENT_IS_MANDATORY": {"type": "boolean"},
        "heat_power": {"$ref": "#/definitions/paramRangeFloat"},
        "heat_source": {
          "type": "array",
          "items": {"type": "string", "enum": ["AMBIENT_AIR", "HOTROOM"]}
        },
        "send_temp": {"$ref": "#/definitions/paramRangeFloat"}
      },
      "required": ["COMPONENT_IS_MANDATORY","heat_power", "heat_source", "send_temp"]
    },
    "mop": {
      "type": "object",
      "properties": {
        "COMPONENT_IS_MANDATORY": {"type": "boolean"},
        "maximum_load": {"$ref": "#/definitions/paramRangeFloat"}
      },
      "required": ["COMPONENT_IS_MANDATORY", "maximum_load"]
    },
    "renewables": {
      "type": "object",
      "properties": {
        "COMPONENT_IS_MANDATORY": {"type": "boolean"},
        "yield_scalars": {
          "type": "array",
          "items": {
            "type": "array",
            "items": {"type": "number","minimum": 0}
          }
        }
      },
      "required": ["COMPONENT_IS_MANDATORY", "yield_scalars"]
    },
    "config": {
      "type": "object",
      "properties": {
        "capex_limit": {
          "type": "number",
          "minimum": 0
        }
      },
      "required": ["capex_limit"]
    }
  },
  "required": ["config"],

  "definitions": {
    "paramRangeInt": {
      "type": "object",
      "properties": {
        "min": {"type": "integer", "title": "Min"},
        "max": {"type": "integer", "title": "Max"},
        "step": {"type": "integer", "title": "Step"}
      },
      "required": ["min", "max", "step"]
    },
    "paramRangeFloat": {
      "type": "object",
      "properties": {
        "min": {"type": "number", "title": "Min"},
        "max": {"type": "number", "title": "Max"},
        "step": {"type": "number", "title": "Step"}
      },
      "required": ["min", "max", "step"]
    }
  }
}