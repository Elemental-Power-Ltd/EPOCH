{
  "version": 3,
  "configurePresets": [
    {
      "name": "base-windows",
      "hidden": true,
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "generator": "Ninja Multi-Config",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "base-linux",
      "hidden": true,
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "generator": "Unix Makefiles",
      "cacheVariables": {
        "CMAKE_POSITION_INDEPENDENT_CODE": "ON"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "headless-windows",
      "inherits": "base-windows",
      "binaryDir": "${sourceDir}/build/headless",
      "installDir": "${sourceDir}/install/headless",
      "cacheVariables": {
        "BUILD_GUI": "OFF"
      }
    },
    {
      "name": "headless-linux",
      "inherits": "base-linux",
      "binaryDir": "${sourceDir}/build",
      "installDir": "${sourceDir}/install",
      "cacheVariables": {
        "BUILD_GUI": "OFF",
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "gui-windows",
      "inherits": "base-windows",
      "binaryDir": "${sourceDir}/build/gui",
      "installDir": "${sourceDir}/install/gui",
      "cacheVariables": {
        "BUILD_GUI": "ON"
      }
    },
    {
      "name": "python-windows",
      "inherits": "base-windows",
      "binaryDir": "${sourceDir}/build/epoch_py",
      "installDir": "${sourceDir}/install/epoch_py",
      "cacheVariables": {
        "PYBIND": "ON"
      }
    },
    {
      "name": "python-linux",
      "inherits": "base-linux",
      "binaryDir": "${sourceDir}/build",
      "installDir": "${sourceDir}/install",
      "cacheVariables": {
        "PYBIND": "ON",
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "gui-rel-windows",
      "displayName": "GUI Release (Windows)",
      "configurePreset": "gui-windows",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "gui-debug-windows",
      "displayName": "GUI Debug (Windows)",
      "configurePreset": "gui-windows",
      "configuration": "Debug"
    },
    {
      "name": "headless-rel-windows",
      "displayName": "Headless Release (Windows)",
      "configurePreset": "headless-windows",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "headless-debug-windows",
      "displayName": "Headless Debug (Windows)",
      "configurePreset": "headless-windows",
      "configuration": "Debug"
    },
    {
      "name": "python-rel-windows",
      "displayName": "Python Bindings (Windows)",
      "configurePreset": "python-windows",
      "configuration": "Release"
    },
    {
      "name": "headless-rel-linux",
      "displayName": "Headless Release (Linux)",
      "configurePreset": "headless-linux",
      "targets":  ["Epoch"]
    },
    {
      "name": "python-rel-linux",
      "displayName": "Python Bindings (Linux)",
      "configurePreset": "python-linux",
      "targets": ["epoch_simulator"]
    }
  ]
}
